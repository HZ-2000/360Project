<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Fair Home Pro - Services</title>
</head>
<body>
  <%- include("partials/hub_Header.ejs") -%>
  <div class="container">
    <h1 class="display-4">List of services.</h1>
    <div class="row">
    <% if(services.length > 0){ %>
      <% services.forEach(service => { %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%=service.TypeOfService%></h5>
              <p class="card-text">Price: <%=service.pricePerUnit%> / <%=service.unit%></p>
              <p class="card-text">Areas: <%=service.unit%></p>
              <button type="button" class="btn-close" aria-label="Close"></button>
            </div>
          </div>
        </div>
    <%})%>
    <% } else { %>
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">No current services</h5>
          </div>
        </div>
      </div>
    <%}%>
    </div>
    <h1 class="display-5">Add Service</h1>
    <form action="/add_services" method="POST"  class="register-form">
      <h1 class="display-6">Service Details</h1>
      <input type="text" id="service_name" placeholder="Service Name" name="service_name" class="form-control" required>
      <input type="text" id="price" placeholder="Price" name="price" class="form-control" required>
      <input type="text" id="unit" placeholder="Unit (EX: 1.25/hr)" name="unit" class="form-control" required> 

      <h1 class="display-6">Service Description</h1>
      <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" id="description" name="service_des" style="height: 100px"></textarea>
      </div>
      <input type="submit" class="btn btn-primary" value="File">
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>