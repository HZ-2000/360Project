<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fair Home Pro - Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@200&display=swap" rel="stylesheet"> -->
  <!-- <link rel="stylesheet" href="css/notifications.css"/> -->
</head>
<body>
  <%- include("partials/hub_Header.ejs") -%>
  <div class="container">
  <div class="home-container">
    <div class="contracts-container">
      <h1 style="font-weight: bold;" class="display-4">Profile.</h1>

      <div class="details">
        <h1 class="display-6">Name:</h1><%=user.name%>
        <h1 class="display-6">Email:</h1><%=user.email%>
        <h1 class="display-6">Phone:</h1><%=user.phone%>
        <h1 class="display-6">Type of User:</h1><%=user.typeOfUser%>
        <h1 class="display-6">Address:</h1><%=user.PrimaryAddress%>
      </div>

      <% if(type == "HomeOwner"){ %>
        <div class="contracts-container">
          <h1 class="display-5">Homes:</h1>
          <% if(homes.length > 0){ %>
            <% homes.forEach(home => { %>
              <div class="col-sm-3">
                <div class="card" >
                  <div class="card-body">
                    <p class="card-text">Type:<%=home.consType%>
                    <p class="card-text">Cons Type: <%=home.typeOfHome%>
                    <p class="card-text">Floors: <%=home.floors%>
                    <p class="card-text">Sqft: <%=home.sqft%>
                    <p class="card-text">Plants: <%=home.plants%>
                    <p class="card-text">Yard Sqft: <%=home.yardSize%>
                  </div>
                </div>
              </div>
          <%})%>
          <% } else { %>
            <h1>No current homes</h1>
          <%}%>
        </div>
      <% } else { %>
        <div class="contracts-container">
            <h1 class="display-5">Areas:</h1>
          <% if(areas.length > 0){ %>
            <% areas.forEach(home => { %>
              <div class="col-sm-3">
                <div class="card" >
                  <div class="card-body">
                    <p class="card-text"><%=home.ServiceArea%>
                  </div>
                </div>
              </div>
          <%})%>
          <% } else { %>
            <h1>No current areas</h1>
          <%}%>
        </div>
        <div class="contracts-container">
          <h1 class="display-5">Licenses:</h1>
          <% if(licenses.length > 0){ %>
            <% licenses.forEach(home => { %>
              <div class="col-sm-3">
                <div class="card" >
                  <div class="card-body">
                    <p class="card-text"><%=home.LicenseName%>
                  </div>
                </div>
              </div>
          <%})%>
          <% } else { %>
            <h1>No current licenses</h1>
          <%}%>
        <div class="contracts-container">
          <h1 class="display-5">Services:</h1>
          <% if(homes.length > 0){ %>
            <% homes.forEach(home => { %>
              <div class="col-sm-3">
                <div class="card" >
                  <div class="card-body">
                    <p class="card-text">Type: <%=home.TypeOfService%>
                    <p class="card-text">Price: <%=home.pricePerUnit%> / <%=home.unit%>
                    <p class="card-text">Description: <%=home.Description%>
                  </div>
                </div>
              </div>
          <%})%>
          <% } else { %>
            <h1>No current Services</h1>
          <%}%>
        </div>
      <%}%>
    </div>
  </div>
</div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>