<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FairHomePro</title>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@200&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/services.css"/>
</head>
<body>
  <div class="nav">
    <%- include("partials/hub_Header.ejs") -%>
  </div>

  <div class="home-container">
    <div class="services-container">
      <div class="title">
        <h1>List of Services</h1>
      </div>
      <% if(homes.length > 0){ %>
        <% homes.forEach(home => { %>
          <div class="service-container" onclick="placeBid(<%= JSON.stringify(home)%>)">
            <div class="details">
              <h1>Floors: <%=home.floors%></h1>
              <h1>Floors: <%=home.floors%></h1>
            </div>
          </div>
      <%})%>
      <% } else { %>
        <h1>No current homes</h1>
      <%}%>
    </div>

    <div class="service-details-container">
      <div class="title">
        <h1>Job info</h1>
      </div>

      <div class="description">
        <h2 id="des-title">Title:</h2>
        <h2 id="des-provider">Provider:</h2>
        <h2 id="des-typeofservice">Type of Service:</h2>
        <h2 id="des-price">Price:</h2>
        <p id="des-description"></p>
      </div>
    </div>
  </div>

<script>
  function placeBid(info)
  {
    const title = document.getElementById('des-title');
    const provider = document.getElementById('des-provider');
    const typeofservice = document.getElementById('des-typeofservice');
    const price = document.getElementById('des-price');
    const description = document.getElementById('des-description');

    title.innerHTML = 'Title: ' + info.email;
    provider.innerHTML = 'Provider: ' + info.consType;
    typeofservice.innerHTML = 'Type of Service: ' + info.typeOfHome;
    price.innerHTML = 'Price: ' + info.floors + '/' + info.floors;
    description.innerHTML = info.yardSize;
  }
</script>
</body>
</html>
