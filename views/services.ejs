<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FairHomePro</title>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@200&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/services.css"/>
</head>
<body>
  <div class="home-container">
    <div class="nav">
      <%- include("partials/hub_Header.ejs") -%>
    </div>
    <div class="title">
      <h1>List of Services</h1>
    </div>

    <div class="services-container">
      <% if(homes.length > 0){ %>
        <% homes.forEach(home => { %>
      <div class="service-container">
        <div class="details">
          <h1>Floors: <%=home.floors%></h1>
          <h1>Type of home: <%=home.typeOfHome%></h1>
          <h1>Yard Size: <%=home.yardSize%></h1>
          <button class="place-bid" onclick="placeBid()">Place Bid</button>
        </div>
      </div>
      <%})%>
      <% } else { %>
        <h1>No current homes</h1>
      <%}%>

  </div>
</body>
</html>
