<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Fair Homes Pro</title>
</head>
<body>
  <%- include("partials/hub_Header.ejs") -%>
  <div class="container">
    <h1 class="display-5">Specialities -</h1>
    <h1 class="display-6">List of Specialities</h1>
    <ul class="list-group">
    <% if(specialties.length > 0){ %>
      <% specialties.forEach(specialtie => { %>
        <li class="list-group-item"><%=specialtie.SpecialtieName%><button type="button" class="btn-close" aria-label="Close"></button></li>
    <%})%>
    <% } else { %>
      <li class="list-group-item">No current Specialities</li>
    <%}%>
    </ul>
    <h1 class="display-6">Add Speciality</h1>
    <form action="/add_specialties" method="POST" class="add_specialtie-form" class="register-form">
      <input type="text" id="HomeType" name="specialtie" class="form-control">
      <input type="submit" class="btn btn-primary" value="File">
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>