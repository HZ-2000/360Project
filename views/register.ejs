<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FairHomePro</title>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@200&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/register.css"/>
</head>
<body>
  <div class="home-container">
    <div class="nav">
      <%- include("partials/header.ejs") -%>
    </div>

    <div class="form-container">
      <form action="/register" method="POST" class="register-form">
        <h2>Register</h2>
        <input type="text" id="name" placeholder="Name" name="name" required><br>
        <input type="email" id="email" placeholder="Email" name="email" required><br>
        <input type="text" id="password" placeholder="Password" name="password" required><br>

        <h2>Bank Info</h2>
        <input type="text" id="CreditCard#" placeholder="CreditCard#" name="CreditCard" required><br>
        <input type="text" id="Exp" placeholder="Exp. MM/YY" name="exp" required><br>
        <input type="email" id="CVV" placeholder="CVV" name="CVV" required><br>
        <input type="email" id="Zipcode" placeholder="Zipcode" name="Zipcode" required><br>

        <label class="label1">
          Buisness
          <input id="info_switch" type="checkbox" name="info_switch" onclick="ShowBusiness()"/>
        </label>

        <div id="HomeOwner">
          <h2>Home Details</h2>
          <input type="text" id="HomeType" placeholder="Type of Home" name="HomeType"><br>
          <input type="text" id="Sqft" placeholder="Square Footage" name="Sqft"><br>
          <input type="text" id="Floors" placeholder="# of Floors" name="Floors"><br>
          <input type="text" id="ConsType" placeholder="Construction type" name="ConsType"><br>
          <input type="text" id="YardSize" placeholder="yard size (sq ft)" name="YardSize"><br>
        </div>

        <div id="BuisnessOwner">
          <h2>Buisness</h2>
          <input type="text" id="BuisnessName" placeholder="Buisness Name" name="BuisnessName"><br>
          <input type="text" id="#Employees" placeholder="# of Employees" name="#Employees"><br>
          <input type="text" id="Imcome" placeholder="Income" name="Income"><br>
          <input type="text" id="Description" placeholder="Description of Buisness" name="Description"><br>
        </div>
        <input type="submit" class="submit" value="Create">
      </form>
    </div>
  </div>

  <script>

  function ShowBusiness() {
    var y = document.getElementById("BuisnessOwner");
    var x = document.getElementById("HomeOwner");
    var check = document.querySelector('#info_switch').checked;

    if (!check) {
      x.style.display = "block";
      y.style.display = "none";
    } else {
      x.style.display = "none";
      y.style.display = "block";
    }
  }
</script>
</body>
</html>
