<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Fair Home\ Pro - Homes</title>
</head>
<body>
  <%- include("partials/hub_Header.ejs") -%>
  <div class="container">
    <h1 class="display-4">List of your homes.</h1>
    <div class="row">
      <% if(homes.length > 0){ %>
        <% homes.forEach(home => { %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <p class="card-text">Type of Home: <%=home.typeOfHome%></p>
              <p class="card-text">Sqft: <%=home.sqft%></p>
              <p class="card-text">Floors: <%=home.floors%></p>
              <button type="button" class="btn-close" aria-label="Close"></button>
            </div>
          </div>
        </div>
    <%})%>
    <% } else { %>
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">No current homes</h5>
          </div>
        </div>
      </div>
    <%}%>
    </div>
    <h1 class="display-4">Add Home</h1>
    <form action="/add_homes" method="POST" class="add_home-form">
      <h1 class="display-5">Home Details</h1>
      <input type="text" id="HomeType" placeholder="Type of Home" name="HomeType" class="form-control" required>
      <input type="number" id="Sqft" placeholder="Square Footage" name="Sqft" class="form-control" required>
      <input type="number" id="Floors" placeholder="# of Floors" name="Floors" class="form-control" required>
      <input type="text" id="ConsType" placeholder="Construction type" name="ConsType" class="form-control" required>
      <input type="number" id="YardSize" placeholder="yard size (sq ft)" name="YardSize" class="form-control" required>
      <input type="text" id="Plants" placeholder="Plants (Y/N)" name="plants" class="form-control" required>
      <input type="text" id="address" placeholder="Home Address" name="HomeAddress" class="form-control" required>

      <input type="submit" class="btn btn-primary" value="File">
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>